-# This file is app/views/classrooms/show.html.haml
!!! 5

- content_for :title, "#{@classroom.name}"

.row
  .span5.module#classroom-detail
    .module-heading
      .module-heading-title= @classroom.name
      .module-heading-action= link_to 'Edit', edit_classroom_path
      
    .module-content
      %table.attribute-table
        %tr
          %td.attribute-label
            Teacher:
          %td.attribute-value
            = @classroom.teacher
        %tr
          %td.attribute-label
            Grade:
          %td.attribute-value
            = @classroom.grade
            
  .span6.offset1
    .module#course-list
      = render :partial => 'courses_in_room', :locals => {:semester => @semester, :classroom => @classroom}
    - if @classroom.teacher && !@classroom.teacher.blank?
      .module#student-list
        = render :partial => 'students_in_room', :locals => {:semester => @semester, :classroom => @classroom}
  
- content_for :js do
  :javascript


