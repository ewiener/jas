.module
  .module-heading
    .module-heading-title Attendance Chart
  
  .module-content
    %table.table.table-bordered.full-width
      %thead
        %tr
          %td
            Name
          - course.number_of_classes.times do |i|
            %td
              = i + 1
      %tbody
        - if course.enrollments.enrolled.any?
          - course.enrollments.enrolled.by_student_name.each do |enrollment|
            - student = enrollment.student
            %tr
              %td
                = student.full_name
              - course.number_of_classes.times do |i|
                %td
        - else
          %tr
            %td(colspan="#{course.number_of_classes + 1}")
              No students yet