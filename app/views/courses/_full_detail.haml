.module
  .module-heading
    .module-heading-title= course.name
    .module-heading-action= link_to 'Edit', edit_course_path(course)
    
  .module-content
    .row
      .span5
        %table.attribute-table
          %tr
            %td.attribute-label
              Instructor:
            %td.attribute-value
              = link_to course.ptainstructor.full_name_first_last, ptainstructor_path(course.ptainstructor)
          %tr
            %td.attribute-label
              Room:
            %td.attribute-value
              = link_to "#{course.teacher.classroom} (#{course.teacher.name})", teacher_path(course.teacher)
          %tr
            %td.attribute-label
              Day:
            %td.attribute-value
              = course.days.join(", ")     
          %tr
            %td.attribute-label
              Time:
            %td.attribute-value
              #{course.start_time} - #{course.end_time}
          %tr
            %td.attribute-label
              Grades:
            %td.attribute-value
              = course.grade_range

      .span5.offset2
        %table.attribute-table
          %tr
            %td.attribute-label
              Session:
            %td.attribute-value
              #{semester.start_date} - #{semester.end_date}
          %tr
            %td.attribute-label
              Holidays:
            %td.attribute-value
          %tr
            %td.attribute-label
              Number of meetings:
            %td.attribute-value
              = course.number_of_classes
          %tr
            %td.attribute-label
              Min/max students:
            %td.attribute-value
              #{course.class_min}/#{course.class_max}
          %tr
            %td.attribute-label
              Cost:
            %td.attribute-value
              #{sprintf("$%0.2f", course.total_fee)}
