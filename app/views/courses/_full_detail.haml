.module
  .module-heading
    .module-heading-title= course.name_with_day_and_grade_level
    .module-heading-action= link_to 'Edit', edit_course_path(course)
    
  .module-content
    .row
      .span5
        %table.attribute-table
          %tr
            %td.attribute-label
              Instructor:
            %td.attribute-value
              - if course.ptainstructor
                = link_to course.ptainstructor.full_name_first_last, ptainstructor_path(course.ptainstructor)
          %tr
            %td.attribute-label
              Room:
            %td.attribute-value
              - if course.teacher
                = link_to "#{course.teacher.classroom} (#{course.teacher.name})", teacher_path(course.teacher)
          %tr
            %td.attribute-label
              Day:
            %td.attribute-value
              = course.days.join(", ")     
          %tr
            %td.attribute-label
              Time:
            %td.attribute-value
              #{course.start_time} - #{course.end_time}
          %tr
            %td.attribute-label
              Grades:
            %td.attribute-value
              = course.grade_range

      .span5.offset2
        %table.attribute-table
          %tr
            %td.attribute-label
              Session:
            %td.attribute-value
              #{semester.start_date} - #{semester.end_date}
          %tr
            %td.attribute-label
              Holidays:
            %td.attribute-value
              = course.holidays.map { |date| date.strftime("%m/%d") }.join(", ")
          %tr
            %td.attribute-label
              Meetings:
            %td.attribute-value
              = course.number_of_classes
          %tr
            %td.attribute-label
              Min/max:
            %td.attribute-value
              #{course.class_min}/#{course.class_max}
          %tr
            %td.attribute-label
              Cost:
            %td.attribute-value
              #{sprintf("$%0.2f", course.total_fee)}
