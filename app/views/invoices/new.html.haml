.row
  .span6
    .module-heading
      .module-heading-title= @invoice.name

    .module-content
      = form_tag instructor_invoices_path(@instructor), :method => :post, :class =>"form-horizontal", :style=>"display:inline;" do
        .control-group
          = label :invoice, :name, 'Invoice Period', :class => "control-label"
          .controls
            = text_field :invoice, :name, :placeholder => "e.g. October", :class => "span4", :id => "name"

        .control-group
          = label :invoice, :amount, 'Amount', :class => "control-label"
          .controls
            .input-prepend
              %span.add-on $
              = text_field :invoice, :amount, :value => sprintf("%0.2f", @invoice.amount.to_f), :class => "span1", :id => "amount"

        .control-group
          = label :invoice, :submitted_at, 'Submitted On', :class => "control-label"
          .controls
            = text_field :invoice, :submitted_at, :placeholder => "MM/DD/YYYY", :class => "span2", :id => "submitted_at"

        .control-group
          = label :invoice, :notes, 'Notes', :class => "control-label"
          .controls
            = text_area :invoice, :notes, :rows => 3, :class => "span4", :id => "notes"

        .control-group
          .controls
            = submit_tag 'Add Invoice', :id => "invoice_submit", :class => "btn btn-warning"
            = link_to 'Cancel', instructor_path(@instructor), :id => "invoice_cancel", :class => "btn btn-info"

