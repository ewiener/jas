!!!
%ul.breadcrumb
  %li
    = link_to current_user.program.short_name, semesters_path
    %span.divider /
  - if semester && !semester.new_record? && site_section != :semesters_section
    %li.dropdown
      = link_to '#', :class => 'dropdown-toggle', :data => {:toggle => 'dropdown'} do
        #{semester.name}
        %b.caret
      %ul.dropdown-menu(role="menu" aria-labelledby="dropdown")
        - all_semesters.each do |s|
          %li
            = link_to s.name, section_path(site_section, s), :tabindex => '-1'
        %li.divider
        %li
          = link_to 'Edit Sessions...', semesters_path, :tabindex => '-1'
      %span.divider /
  - if site_section
    %li.active
      = link_to_section site_section, semester
  
  %li.pull-right
    = link_to '#', :class => "print-preview" do
      <i class="icon-print"></i> Print

%h4.print-heading-main
  = current_user.program.long_name
  - if semester && !semester.new_record?
    = "- #{semester.name} - #{semester.start_date_as_date.strftime("%b %d")} to #{semester.end_date_as_date.strftime("%b %d")}"
