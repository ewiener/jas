- content_for :title, "Edit Program"

.row
  .span6.module
    .module-heading
      .module-heading-title Edit Program
      
    .module-content
      = form_tag program_path(@program), :method => :put, :class => "form-horizontal" do
        .control-group 
          = label :program, :short_name, 'Short name:', :class => "control-label"
          .controls
            = text_field :program, :short_name
    
        .control-group 
          = label :program, :abbrev, 'Abbreviation:', :class => "control-label"
          .controls
            = text_field :program, :abbrev

        .control-group 
          = label :program, :long_name, 'Long name:', :class => "control-label"
          .controls
            = text_field :program, :long_name

        .control-group
          = label :program, :description, 'Description', :class => "control-label"
          .controls
            = text_area :program, :description, :rows => 5
    
        .control-group
          .controls
            = submit_tag 'Update', :class => "btn btn-warning"
            = link_to 'Cancel', program_path(@program), :class => "btn btn-info"

- content_for :js do
  :javascript

