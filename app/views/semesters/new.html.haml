-# This file is app/views/semesters/new.html.haml
!!! 5

%html
  %head
    %title
      New Session
    = stylesheet_link_tag("frontpage")
    = javascript_include_tag("application")
  %body
    = render :partial => "partial/topbar_index"
    %div#container
      %ul.pager
        %li.previous
          %a{:href=>"#{semesters_path}"}
            &larr; Back
      %h1.span6.offset3
        Create New Session
      / %h3.span8.offset3
      .clear
      = render :partial => "partial/semester_error"
      .clear
      %div.span8.offset2
        = form_tag semesters_path, :class =>"form-horizontal" do
          %div.control-group 
            = label :semester, :name, 'Session Name:', :class => "control-label"
            %div.controls
              = text_field :semester, :name

          %div.control-group
            = label :semester, :start_date, 'Start Date:', :class => "control-label"
            %div.controls
              = text_field :semester, :start_date, :placeholder => "e.g. 8/15/2012"

          %div.control-group
            = label :semester, :end_date, 'End Date:', :class => "control-label"
            %div.controls
              = text_field :semester, :end_date, :placeholder => "e.g. 12/21/2012"

          %div.control-group
            = label :semester, :registration_deadline, 'Registration Deadline:', :class => "control-label"
            %div.controls
              = text_field :semester, :registration_deadline, :placeholder => "e.g. 7/30/2012"

          %div.control-group
            = label :semester, :lottery_deadline, 'Lottery Deadline:', :class => "control-label"
            %div.controls
              = text_field :semester, :lottery_deadline, :placeholder => "e.g. 8/5/2012"

          %div.control-group
            = label :semester, :fee, 'Registration Fee:', :class => "control-label"
            %div.controls
              = text_field :semester, :fee

          %div.control-group
            %div.controls
              = submit_tag 'Save Semester', :class => "btn btn-info"
              = link_to 'Cancel', semesters_path, :class => "btn btn-info"

        
          /%div.control-group
          /  = label :semester, :start_label, 'Start Date', :class => "control-label"
          /  %div.controls
          /    = date_select :semester, :start,{:use_short_month => true, :order => [:month, :day, :year]}, {:class => "shrink"}
    
          /%div.control-group
          /  = label :semester, :end_label, 'End Date', :class => "control-label"
          /  %div.controls
          /    = date_select :semester, :end,{:use_short_month => true, :order => [:month, :day, :year]}, {:class => "shrink"}
              
          /%div.control-group
          /  %div.controls
          /    = submit_tag 'Save Changes'
    :javascript
      $("#navbar-new-session").addClass('active');
