-# This file is app/views/users/new.html.haml
!!! 5

- content_for :title, "New User"

.row
  .span5.module
    .module-heading
      .module-heading-title New User

    .module-content
      = form_tag program_users_path, :method => :post, :class => "form-horizontal" do
        .control-group
          = label :user, :username, 'Username', :class => "control-label"
          .controls
            = text_field :user, :username
        .control-group
          .control-label Role
          .controls
            - if current_user.is_app_admin?
              = label :user, :role, :class => "radio" do
                = radio_button :user, :role, 0
                App Admin
            = label :user, :role, :class => "radio" do
              = radio_button :user, :role, 1
              Program Admin
            = label :user, :role, :class => "radio" do
              = radio_button :user, :role, 2, :checked => true
              Session Admin
        .control-group
          = label :user, :password, 'Password', :class => "control-label"
          .controls
            = password_field :user, :password
        .control-group
          = label :user, :password_confirmation, 'Confirm password', :class => "control-label"
          .controls
            = password_field :user, :password_confirmation

        .control-group
          .controls
            = submit_tag 'Add User', :class => "btn btn-warning"
            = link_to 'Cancel', program_users_path, :class => "btn btn-info"


- content_for :js do
  :javascript
